<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="piotr.fr.nosnooze.AlarmActivity"
    android:background="@color/lightblue"
    android:id="@+id/alarmBg"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_alarm"
            android:textColor="@android:color/white"
            android:textAppearance="@android:style/TextAppearance.Large"/>

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@android:style/TextAppearance.Large"/>


    </LinearLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
        android:layout_weight="1">

            <ImageView
                android:id="@+id/disk"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/white_circle"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/white_circle"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/animatedButton"
                android:background="@android:drawable/ic_lock_idle_alarm"
                android:layout_alignParentEnd="false"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:id="@+id/brokencircle"
                android:src="@drawable/brokencircle"
                android:layout_gravity="center"
                android:layout_centerInParent="true" />
        </RelativeLayout>

</LinearLayout>
